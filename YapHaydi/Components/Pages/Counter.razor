@inject CascadingValueSource<RLCV> source
@rendermode InteractiveServer
@page "/counter"

<PageTitle>Counter</PageTitle>

<h1>Counter</h1>

<p role="status">Current count: @currentCount</p>

<button class="btn btn-primary" @onclick="IncrementCount">Click me @rLCV.usrName</button>

@code {
    [CascadingParameter] public RLCV? rLCV{ get; set; }

    private int currentCount = 0;

    private void IncrementCount()
    {
        currentCount++;

        rLCV.usrName = currentCount.ToString();

        source.NotifyChangedAsync();

        //rLCV = new DDD{usrId = currentCount.ToString()};

        
    }
}
